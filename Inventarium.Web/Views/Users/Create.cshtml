@model InventariumWebApp.Models.RegisterViewModel

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@modelError.ErrorMessage</li>
            }
        </ul>
    </div>
}

@{
    ViewData["Title"] = "Adicionar Usuário";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Users" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="Company" type="hidden" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="Role" class="form-label"></label>
        <select asp-for="Role" class="form-select">
            <option value="Administrator">Administrador</option>
            <option value="Default">Somente Leitura</option>
        </select><br />
    </div>
    <button type="submit" class="btn btn-success">
        <i class="fas fa-user-plus"></i> Criar Usuário
    </button> |
    <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary">
        <i class="fas fa-arrow-left"></i> Voltar para o Dashboard
    </a>
</form>

@section Scripts {
    
}